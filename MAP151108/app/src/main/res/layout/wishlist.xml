<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/title"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/placeclicked"
        android:layout_below="@+id/title"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="#1B5E20" />

    <!--ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image1"
        android:layout_below="@+id/placeclicked"
        /-->

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@android:id/list"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:scrollingCache="true"
        android:smoothScrollbar="true"
        android:layout_above="@+id/btnGetAll"
        android:background="#E0E0E0"
        android:layout_below="@+id/placeclicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List All My Wish Places"
        android:id="@+id/btnGetAll"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

        <!--ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/countrysent_image"
            android:layout_below="@+id/countrysent"
            android:src="@drawable/me2"
            /-->

</RelativeLayout>

