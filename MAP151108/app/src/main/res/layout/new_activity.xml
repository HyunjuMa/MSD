<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/placeclicked"
        android:textSize="40dp"
        android:textAlignment="center"
        android:textColor="#1B5E20" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/comment"
        android:layout_below="@+id/placeclicked"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="#555555"
        />

    <!--ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image1"
        android:layout_below="@+id/comment"
        /-->

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@android:id/list"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:layout_below="@+id/comment"
        android:layout_above="@+id/btnGetAll"
        android:background="#E0E0E0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List All My Places"
        android:id="@+id/btnGetAll"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <!--ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/countrysent_image"
        android:layout_below="@+id/countrysent"
        android:src="@drawable/me2"
        /-->

</RelativeLayout>